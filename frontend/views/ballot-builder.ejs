<div class="dashboard-container">
  <div class="sidebar">
    <div class="logo">
      <img src="/images/logo.png" alt="SafeBallot Logo">
      <span class="logo-text">SAFEBALLOT</span>
      <div class="logo-tagline">-VOTE OUTSIDE THE BOX-</div>
    </div>
    
    <nav class="sidebar-nav">
      <a href="/dashboard" class="nav-item">
        <svg width="24" height="24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8h5z" fill="currentColor"/>
        </svg>
        Home
      </a>
      <a href="/elections" class="nav-item">
