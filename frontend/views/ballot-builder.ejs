    </nav>
    
    <div class="user-profile">
      <div class="avatar">
        <img src="/images/avatar.png" alt="User Avatar">
      </div>
      <div class="user-info">
        <p class="user-name">John Doe</p>
        <p class="user-email">johndoe@example.com</p>
      </div>
    </div>
  </div>
  
  <div class="main-content">
    <div class="header-container">
      <div class="ballot-builder-steps">
        <a href="/ballot/new?step=1" class="step-item <%= step == 1 ? 'active' : '' %>">
          <div class="step-number">1</div>
          <div class="step-label">Build Ballot</div>
        </a>
        <div class="step-connector"></div>
        <a href="/ballot/new?step=2" class="step-item <%= step == 2 ? 'active' : '' %>">
          <div class="step-number">2</div>
          <div class="step-label">Set Duration</div>
        </a>
        <div class="step-connector"></div>
        <a href="/ballot/new?step=3" class="step-item <%= step == 3 ? 'active' : '' %>">
          <div class="step-number">3</div>
          <div class="step-label">Select # of Participants</div>
        </a>
        <div class="step-connector"></div>
        <a href="/ballot/new?step=4" class="step-item <%= step == 4 ? 'active' : '' %>">
          <div class="step-number">4</div>
          <div class="step-label">Confirm + Pay</div>
        </a>
      </div>
      
      <div class="navigation-buttons">
        <button class="next-btn">Next</button>
      </div>
    </div>
    
    <% if (step == 1) { %>
    <h1 class="page-title">Build Ballot</h1>
    
    <div class="ballot-builder-content">
      <div class="ballot-section">
        <h2>Content</h2>
        <div class="question-list">
          <div class="question-item">
            <div class="question-content">
              <div class="question-label">| question 1</div>
              <div class="question-text">Question Title Here</div>
            </div>
          </div>
          <button class="add-question-btn blue-text">+ Add New Question</button>
        </div>
      </div>
      
      <div class="ballot-preview">
        <div class="ballot-title-input">
          <label>Election Title <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.6 3.4C12.8 3.2 13 3.1 13.2 3.1C13.4 3.1 13.5 3.1 13.7 3.2C13.9 3.3 14 3.4 14.1 3.6C14.2 3.8 14.2 3.9 14.2 4.1C14.2 4.3 14.1 4.5 14 4.6L13.4 5.2L11.9 3.7L12.6 3.4ZM11.1 4.5L4 11.6V13.1H5.5L12.6 6L11.1 4.5Z" fill="#666666"/>
          </svg></label>
        </div>
        
        <div class="question-editor">
          <div class="question-header">
            <div class="question-number">Question 1</div>
            <div class="question-actions">
              <button class="action-btn up-arrow" title="Move up">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#7C8DA7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 15l-6-6-6 6"/>
                </svg>
              </button>
              <button class="action-btn down-arrow" title="Move down">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#7C8DA7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M6 9l6 6 6-6"/>
                </svg>
              </button>
              <div class="action-separator"></div>
              <button class="action-btn duplicate-icon" title="Duplicate">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#7C8DA7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
              </button>
              <button class="action-btn delete-icon" title="Delete">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#7C8DA7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  <line x1="10" y1="11" x2="10" y2="17"></line>
                  <line x1="14" y1="11" x2="14" y2="17"></line>
                </svg>
              </button>
            </div>
          </div>
          
          <div class="form-group">
            <label class="light-label">Question Title</label>
            <input type="text" value="Question Title Here">
          </div>
          
          <div class="form-group">
            <label class="light-label">Description (optional)</label>
            <textarea placeholder="Type here"></textarea>
          </div>
          
          <div class="form-group">
            <div class="checkbox-group">
              <input type="checkbox" id="allow-write-in">
              <label class="light-label" for="allow-write-in">Allow write in</label>
            </div>
          </div>
          
          <div class="options-container">
            <button class="add-option-btn centered-option-btn">+ Type here</button>
          </div>
        </div>
      </div>
    </div>
    <% } else if (step == 2) { %>
    <h1 class="page-title">How long will the election run for?</h1>
    
    <div class="duration-container">
      <div class="duration-section">
        <div class="section-header">
          <div class="blue-circle"></div>
          <h3 class="section-title">Duration</h3>
        </div>
        
